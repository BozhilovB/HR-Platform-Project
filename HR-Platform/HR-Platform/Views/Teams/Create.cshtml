@model Team

<h2>Create New Team</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Team Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ManagerId" class="control-label">Manager</label>
        <select asp-for="ManagerId" class="form-control" asp-items="ViewBag.Managers"></select>
        <span asp-validation-for="ManagerId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to Teams</a>
</form>