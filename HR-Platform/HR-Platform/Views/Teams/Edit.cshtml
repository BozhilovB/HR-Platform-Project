@model Team

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Team Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ManagerId" class="control-label">Manager</label>
        <select asp-for="ManagerId" class="form-control" asp-items="@(ViewData["Managers"] as IEnumerable<SelectListItem>)"></select>
        <span asp-validation-for="ManagerId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to Teams</a>
</form>