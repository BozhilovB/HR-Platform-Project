@model DenyApplicationViewModel

<h2>Deny Application</h2>

<form asp-action="Deny" method="post">
    <input type="hidden" asp-for="ApplicationId" />

    <div class="form-group">
        <label>Applicant</label>
        <input type="text" asp-for="ApplicantName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="text" asp-for="ApplicantEmail" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Job Posting</label>
        <input type="text" asp-for="JobPostingTitle" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label for="denialReason">Denial Reason</label>
        <textarea asp-for="DenialReason" class="form-control" rows="4"></textarea>
        <span asp-validation-for="DenialReason" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-danger">Deny Application</button>
    <a asp-action="Applicants" asp-route-id="@ViewBag.JobPostingId" class="btn btn-secondary">Cancel</a>
</form>